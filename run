# This is the command used to run the operating system:

if [[ "$1" == "help" ]]
then
	echo "Usage : "
	echo "./run <option>"
	echo "Options : "
	echo "	cleanup : removes the built files afterwards"
	echo "	help : prints this help message"
	exit
fi

make

qemu-system-i386 -fda build/main_floppy.img

if [[ "$1" == "cleanup" ]]
then
	rm build/*
fi
